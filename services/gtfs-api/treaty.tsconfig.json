{
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "gtfs-db-types": ["../gtfs-processor/shared/gtfs-db-types/dist/index.d.ts"]
        }
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}